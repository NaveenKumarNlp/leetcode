class Solution {
    public int arithmeticTriplets(int[] nums, int diff) {
        int count=0;
        Set<Integer> set=new HashSet<>();
        for(int i:nums){
            if(set.contains(i-diff) && set.contains(i-diff-diff)){
                count++;
            }
            set.add(i);
        }
        return count;
    }
}

