class Solution {
    public int[] frequencySort(int[] nums) {
        ArrayList<Integer> list=new ArrayList<>();
        HashMap<Integer,Integer> map=new HashMap<>();
        for(int num:nums){
            list.add(num);
            map.put(num,map.getOrDefault(num,0)+1);
        }
        Collections.sort(list,(a,b)->{
			int f1 = map.get(a);
			int f2 = map.get(b);
			if (f1 != f2) {
				return f1 - f2;
			} else {
				return b - a;
			}
		});
        for(int i=0;i<nums.length;i++){
            nums[i]=list.get(i);
        }
        return nums;
    }
}

