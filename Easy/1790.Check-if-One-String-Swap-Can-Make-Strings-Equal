class Solution {
    public boolean areAlmostEqual(String s1, String s2) {
        int []temp=new int[26];
        for(int i=0;i<s1.length();i++){
            temp[s1.charAt(i)-'a']++;
        }
        for(int i=0;i<s2.length();i++){
            temp[s2.charAt(i)-'a']--;
        }
        boolean flag=false;
        for(int i=0;i<26;i++){
            if(temp[i]!=0){
                flag=true;
            }
        }
        if(flag){
            return false;
        }
        int count=0;
        for(int i=0;i<s1.length();i++){
            if(s1.charAt(i)!=s2.charAt(i)){
                count++;
            }
        }
        if(count<=2){
            return true;
        }else{
            return false;
        }
    }
}

