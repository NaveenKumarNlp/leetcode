class Solution {
    public int maxFreqSum(String s) {
        int vow=0,con=0;
        char []temp=new char[26];
        for(int i=0;i<s.length();i++){
            temp[s.charAt(i)-'a']++;
        }
        for(int i=0;i<26;i++){
            if(i==0 || i==4 || i==8 || i==14 || i==20){
                if(temp[i]>vow){
                    vow=temp[i];
                }
            }else{
                if(temp[i]>con){
                    con=temp[i];
                }
            }
        }
        return vow+con;
    }
}
