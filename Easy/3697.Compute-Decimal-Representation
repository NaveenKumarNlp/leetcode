class Solution {
    public int[] decimalRepresentation(int n) {
        ArrayList<Integer> list =new ArrayList<>();
        int temp=n;
        int base=10;
        while(temp>0){
            int rem=temp%base;
            if(rem!=0){
                list.add(rem);
            }
            temp=temp-rem;
            base*=10;
        }
        int []arr=new int[list.size()];
        int x=0;
        for(int i=list.size()-1;i>=0;i--){
            arr[x++]=list.get(i);
        }
        return arr;
    }
}
