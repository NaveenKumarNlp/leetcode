class Solution {
    public int[] evenOddBit(int n) {
        int index = 0,odd = 0,even = 0;
        while(n>0){
            if(index%2==0 && n%2==1){
                even++;
            }else if(index%2!=0 && n%2==1){
                odd++;
            }
            index++;
            n/=2;
        }
        int []answer={even,odd};
        return answer;
    }
}

